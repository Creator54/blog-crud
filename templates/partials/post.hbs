<div class="container-fluid mt-5 contact-style" id="contactid">
  <div class="row">
    <div class="col-md-6 col-12 mx-auto">
      <h1 class="text-center main-heading">Create New</h1>
      <div class="row">
        <form action="/create-post" method="POST" class="form">
          <div class="form-group">
            <label for="postname" class="form-label"> Title</label>
            <input type="name" class="form-control" id="postname" placeholder="give some title" name="postname">
          </div>
          <div class="form-group">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="textarea" placeholder="your content goes here" rows="5" name="content"></textarea>
          </div>
          <div class="form-group">
            <label for="category" class="form-label">Conclusion</label>
            <input type="text" class="form-control" id="conclusion" placeholder="share some conclusion" name="conclusion">
          </div>
          <div class="form-group">
            <label for="category" class="form-label">Category</label>
            <input type="text" class="form-control" id="category" placeholder="specify category" name="category">
          </div>
          <button type="post" class="btn btn-primary btn-lg mt-3">Post</button>
        </form>
      </div>
    </div>
  </div>
</div>
