<div class="container-fluid mt-5 contact-style" id="contactid">
  <div class="row">
    <div class="col-md-6 col-12 mx-auto">
      <h1 class="text-center main-heading">Contact Us</h1>
      <p class="text-center sub-heading">We will be happy to help youðŸ§¡</p>
      <div class="row">
        <form action="/contact" method="POST" class="form">
          <div class="form-group">
            <label for="name" class="form-label">Name</label>
            <input type="name" class="form-control" id="name" placeholder="Full Name" name="name">
          </div>
          <div class="form-group">
            <label for="Email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your email" name="email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="form-group">
            <label for="institute" class="form-label">Institue</label>
            <input type="name" class="form-control" id="institute" placeholder="Full Name" name="institute">
          </div>
          <div class="form-group">
            <label for="contact" class="form-label">Contact</label>
            <input type="number" class="form-control" id="contact" placeholder="Full Name" name="contact">
          </div>
          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea type="text" class="form-control" id="message" placeholder="Write your message" rows="5" name="message"></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-lg mt-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
