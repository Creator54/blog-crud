
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="css/style.css">
  <title>Homepage</title>
</head>

<body>
  {{>navbar}}
{{#each entries}}
      <div class="card">
  <div class="card-header">
    {{this.postname}}
  </div>
  <div class="card-body">
    <p class="card-text">Content:{{this.content}}</p>
    <p class="card-text">Conclusion:{{this.conclusion}}</p>
    <p class="card-text">Category:{{this.category}}</p>
  </div>
  <div class="card-footer">
    <a href="/edit/{{this._id}}" class="btn btn-warning btn-lg">Edit</a>
    {{!-- <a href="/delete/{{this._id}}" method="DELETE"class="btn btn-danger btn-lg" onclick="return confirm('Are you sure to delete this record ?');">Delete</a> --}}
    <form action='/delete/{{this._id}}' method="POST">
      <input id="id" type="text" name="id" /><br />
      <button id:"cancella" type="submit">Submit</button>
    </form>
  </div>
</div>
{{/each}}
<script src="../jq/jquery.js" type="text/javascript"></script>
  <script src="../js/bootstrap.js" type="text/javascript"></script>
<script>
  $(document).ready(function() {
 $('#cancella').on("click", function() {
  var id = $('#id').val();
  $.ajax({
   url: '/delete/:id',
   type: 'DELETE',
   data: {"id": id},
   dataType: 'json',
   success: function(data) {
    //do something
  }});
 });
});
</script>
</body>

</html>
